{
  "name": "tesla-dashboard-server",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "tsc-watch --onSuccess \"node ./dist/server.js\"",
    "clean": "rimraf dist",
    "build": "tsc",
    "deploy": "docker build -t tesla-dashboard-server .",
    "start": "npm run build && node ./dist/server.js",
    "poll": "npm run build && node ./dist/sync.js lisa",
    "test": "jest --coverage --verbose"
  },
  "dependencies": {
    "axios": "^0.19.0",
    "body-parser": "^1.19.0",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.4",
    "cors": "^2.8.5",
    "debug": "^4.1.1",
    "dotenv": "^8.0.0",
    "express": "^4.17.1",
    "mongodb": "latest",
    "mongoose": "^5.6.8",
    "morgan": "^1.9.1"
  },
  "jest": {
    "verbose": true,
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/test/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  },
  "devDependencies": {
    "@types/axios": "^0.14.0",
    "@types/compression": "0.0.36",
    "@types/cors": "^2.8.5",
    "@types/express": "^4.17.0",
    "@types/compression": "0.0.36",
    "@types/cookie-parser": "^1.4.1",
    "@types/cors": "^2.8.5",
    "@types/express": "^4.17.0",
    "@types/jest": "^24.0.16",
    "@types/mongodb": "^3.1.31",
    "@types/mongoose": "^5.5.11",
    "@types/morgan": "^1.7.36",
    "@types/node": "^12.6.9",
    "jest": "^24.8.0",
    "rimraf": "^2.6.3",
    "ts-jest": "^24.0.2",
    "typescript": "^3.5.3",
    "tesla-dashboard-api": "latest"
  }
}
